page{
  background-color: #EFEFEF;
}
.title{
  width:100%;
  height:70rpx;
  background-color:  #8CDE6C;
  text-align: center;
  display: flex;
  flex-direction: column; 
}
.text{
  margin-top:8rpx;
  font-weight:800; 
  color:white;
}

.listbox{
  width:100%;
  overflow-y:scroll;
  position: absolute;

}
.scbg{
  background-color: #EFEFEF;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}
.userinfo{
  width: 100%;
  background-color: white;
  padding-top: 15rpx;
  border-bottom: 15rpx solid #ccc;
}
.firstblock{
  height: 110rpx;
  width: 92%;
  background-color: rgba(143, 188, 182, 0.199);
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.userinfo-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx ;
  margin-top: 10rpx;
}
.userinfo-nickname{
  color: black;
  display: flex;
  justify-content: flex-start;
  margin-top: 10rpx;
  font-size: 35rpx;
  flex-direction: row;
}
.tel{
  display: flex;
  justify-content: flex-start;
  margin-top: 5rpx;
  font-size: 30rpx;
  flex-direction: row ;
}
.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #888888;
}
.content{
  font-size: 29rpx;
  color: black;
}
.thirdblock{
  width: 91%;
  height:100rpx ;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.positive{

  width: 40%;
  height:66rpx;
