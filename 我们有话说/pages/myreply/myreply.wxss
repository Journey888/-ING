/* 框架  */
.talks-layer {  
    position: fixed; 
    bottom: -100%;  
    height: 0;  
    width: 100%;  
    overflow: hidden;  
/* background-color: blue; */
}
.layer-white-space {  
    height: 100%;  
    width: 100%;  
    background-color: #ccc;  
    opacity: .5;  
/* background-color: green; */
}
.talks {  
    position: absolute;  
    height: 1100rpx;  
    width: 100%;  
    bottom: 0rpx;  
    background-color: #2f2d2e; 
    border-top-left-radius: 5%;  
    border-top-right-radius: 5%;  
    /* background-color: red; */
}
.talk-header {  
    width: 100%;  
    height: 200rpx;  
    text-align: center;
}
.talk-body {  
    height: 700rpx;
}
.talk-footer {  
    position: absolute; 
    bottom: 0rpx;  
    width: 100%;  
    height: 80rpx;  
    background-color: #151515;
}
/* 顶部元素  */
.talk-count {  
    font-size: 0.8rem;  
    height: 20rpx;  
